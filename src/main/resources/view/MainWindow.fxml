<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="450" onCloseRequest="#handleExit" title="SOChedule" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/calendar.png" />
  </icons>
  <scene>
    <Scene>
      <VBox>
        <MenuBar fx:id="menuBar" style="-fx-background-color: #bab2b5#bab2b5;" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" style="-fx-background-color: white;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" style="-fx-background-color: white;" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
        </StackPane>
            <StackPane fx:id="commandBoxPlaceholder1" layoutX="10.0" layoutY="39.0" style="-fx-background-color: white;" styleClass="pane-with-border">
               <padding>
                  <Insets bottom="5" left="10" right="10" top="5" />
               </padding>
            </StackPane>

        <HBox maxWidth="Infinity" styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
          <!-- Task list -->
          <VBox alignment="TOP_CENTER" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
            <Label textFill="#123c69">
              <font>
                <Font name="Chalkduster" size="14.0" />
              </font>
              Tasks
            </Label>
                  <StackPane fx:id="commandBoxPlaceholder11" styleClass="pane-with-border">
                     <padding>
                        <Insets bottom="5" left="10" right="10" top="5" />
                     </padding>
                  </StackPane>
            <VBox fx:id="taskList" minWidth="340" prefWidth="340" style="-fx-background-color: #eee2dc #eee2dc;" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
              <StackPane fx:id="taskListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>
          </VBox>

          <!-- Event list -->
          <VBox alignment="TOP_CENTER" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
            <Label textFill="#123c69">
              <font>
                <Font name="Chalkduster" size="14.0" />
              </font>
              Events
            </Label>
                  <StackPane fx:id="commandBoxPlaceholder111" styleClass="pane-with-border">
                     <padding>
                        <Insets bottom="5" left="10" right="10" top="5" />
                     </padding>
                  </StackPane>
            <VBox fx:id="eventList" minWidth="340" prefWidth="340" style="-fx-background-color: #eee2dc #eee2dc;" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
              <StackPane fx:id="eventListPanelPlaceholder" VBox.vgrow="ALWAYS" />
            </VBox>
          </VBox>


        </HBox>


        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
