<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first">
               <font>
                  <Font name="Courier" size="13.0" />
               </font></Label>
            </HBox>
            <FlowPane fx:id="tags" hgap="7.0" style="-fx-border-radius: 3; -fx-background-radius: 3; -fx-border-color: #eee2dc;" vgap="3.0">
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <padding>
               <Insets bottom="1.0" left="5.0" right="5.0" top="1.0" />
            </padding></FlowPane>
            <Label fx:id="startDate" text="\$startDate">
            <font>
               <Font name="Courier" size="13.0" />
            </font></Label>
            <Label fx:id="startTime" text="\$startTime">
            <font>
               <Font name="Courier" size="13.0" />
            </font></Label>
            <Label fx:id="endDate" text="\$endDate">
            <font>
               <Font name="Courier" size="13.0" />
            </font></Label>
            <Label fx:id="endTime" text="\$endTime">
            <font>
               <Font name="Courier" size="13.0" />
            </font></Label>
            <Label fx:id="category" text="\$category">
            <font>
               <Font name="Courier" size="13.0" />
            </font></Label>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
